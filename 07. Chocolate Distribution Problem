class Solution
{
    public long findMinDiff (ArrayList<Integer> a, int n, int m)
    {
        // your code here
        Collections.sort(a);
        int minDiff = Integer.MAX_VALUE;
        for(int i=0; i<n-m+1; i++){
            int currDiff = a.get(i+m-1)-a.get(i);
            minDiff = Math.min(minDiff, currDiff);
        }
        return minDiff;
    }
}
